{
  "name": "reason-oidc-provider",
  "version": "0.1.0",
  "description": "Example Reason Esy Project",
  "license": "MIT",
  "esy": {
    "build": "refmterr dune build"
  },
  "scripts": {
    "test": "esy dune runtest",
    "run": "esy x main.exe",
    "format": "esy dune build @fmt -p #{self.name}",
    "format:watch": "esy dune build --watch @fmt -p #{self.name}",
    "watch": "esy dune build --watch -p #{self.name}"
  },
  "dependencies": {
    "@esy-ocaml/reason": "*",
    "@opam/containers": "*",
    "@opam/dune": "*",
    "@opam/fmt": "*",
    "@opam/httpaf-lwt": "*",
    "@opam/httpaf": "*",
    "@opam/hpack": "*",
    "@opam/h2": "*",
    "@opam/h2-lwt": "*",
    "@opam/h2-lwt-unix": "*",
    "@opam/jwt": "*",
    "@opam/lambda-term": "*",
    "@opam/logs": "*",
    "@opam/lwt": "*",
    "@opam/yojson": "*",
    "@reason-native/console": "*",
    "@opam/uri": "*",
    "ocaml": "~4.6.0",
    "refmterr": "*",
    "@opam/tls": "*",
    "@opam/ppx_deriving": "*",
    "@opam/ppx_sexp_conv": "*",
    "@opam/x509": "0.6.1",
    "@opam/base64": "< 3.0.0",
    "@opam/cstruct-lwt": "*",
    "@opam/irmin-mem": "*",
    "@opam/uuidm": "*",
    "@opam/nocrypto": "*",
    "@opam/zarith": "*",
    "@reason-native/rely": "*"
  },
  "resolutions": {
    "@opam/menhir": "20171013",
    "@opam/re": "1.8.0",
    "@opam/h2-lwt-unix": "anmonteiro/ocaml-h2:h2-lwt-unix.opam#cd5c59b",
    "@opam/httpaf": "anmonteiro/httpaf:httpaf.opam#53042e5",
    "@opam/httpaf-lwt": "anmonteiro/httpaf:httpaf-lwt.opam#25149c6",
    "@opam/jwt": "AestheticIntegration/ocaml-jwt:jwt.opam#1517838",
    "@opam/nocrypto": "mirleft/ocaml-nocrypto:opam#de1578f",
    "pgk-conf": "esy-ocaml/yarn-pkg-config#cca65f9",
    "gmp": {
      "source": "archive:https://gmplib.org/download/gmp/gmp-6.1.2.tar.xz#9dc6981197a7d92f339192eea974f5eca48fcffe",
      "override": {
        "buildsInSource": true,
        "build": [
          "find ./ -exec touch -t 200905010101 {} +",
          "./configure --prefix=#{self.install} #{os == 'windows' ? '--host x86_64-w64-mingw32' : ''} CFLAGS=-fPIC",
          "make"
        ],
        "install": [
          "make install"
        ],
        "exportedEnv": {
          "CFLAGS": {
            "scope": "global",
            "val": "-I#{self.install / 'include'} $CFLAGS"
          },
          "LDFLAGS": {
            "scope": "global",
            "val": "-L#{self.lib} $LDFLAGS"
          },
          "LD_LIBRARY_PATH": {
            "scope": "global",
            "val": "#{self.lib}:$LD_LIBRARY_PATH"
          },
          "LIBRARY_PATH": {
            "scope": "global",
            "val": "#{self.lib}:$LIBRARY_PATH"
          },
          "CPATH": {
            "scope": "global",
            "val": "{self.include}:$CPATH"
          },
          "PKG_CONFIG_PATH": {
            "val": "#{self.lib / 'pkgconfig' : $PKG_CONFIG_PATH}",
            "scope": "global"
          }
        }
      }
    },
    "@opam/zarith": "briskml/zarith#a9e0455"
  },
  "devDependencies": {
    "@opam/merlin": "*",
    "ocaml": "~4.6.0"
  }
}
