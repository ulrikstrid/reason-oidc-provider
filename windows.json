{
  "source": "./esy.json",
  "override": {
    "build": "refmterr dune build --profile=windows",
    "scripts": {
      "test": "esy dune runtest --profile=windows",
      "run": "esy x main.exe",
      "format": "esy dune build @fmt -p #{self.name}",
      "format:watch": "esy dune build --watch @fmt -p #{self.name}",
      "watch": "esy dune build --watch -p #{self.name}"
    },
    "resolutions": {
      "@opam/httpaf": "anmonteiro/httpaf:httpaf.opam#6d2c80e",
      "@opam/httpaf-lwt-unix": "ulrikstrid/httpaf:httpaf-lwt-unix.opam#f280025",
      "@opam/h2-lwt-unix": "ulrikstrid/ocaml-h2:h2-lwt-unix.opam#5daceaa",
      "@opam/jwt": "AestheticIntegration/ocaml-jwt:jwt.opam#1517838",
      "@opam/nocrypto": "ulrikstrid/ocaml-nocrypto:opam#1ad5838",
      "esy-openssl": {
        "source": "esy-packages/esy-openssl#100f884",
        "override": {
          "exportedEnv": {
            "CFLAGS": {
              "val": "-I#{esy-openssl.install / 'include'} $CFLAGS",
              "scope": "global"
            },
            "LDFLAGS": {
              "val": "-L#{esy-openssls.lib} $LDFLAGS",
              "scope": "global"
            }
          }
        }
      },
      "@opam/ssl": {
        "source": "ulrikstrid/ocaml-ssl:ssl.opam#2ec4c66",
        "override": {
          "exportedEnv": {
            "CAML_LD_LIBRARY_PATH": {
              "val": "#{self.lib / 'ssl' : $CAML_LD_LIBRARY_PATH}",
              "scope": "global"
            }
          }
        }
      }
    }
  }
}
